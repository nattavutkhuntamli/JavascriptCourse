<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% let total = 0; %>
            <% if (products.length > 0) { %>
                <ul class="cart__item-list">
                    <% products.forEach(p => { %>
                        <li class="cart__item">
                            <img src="<%= p.imageUrl %>" alt="<%= p.title %>" width="60px" height="60px">
                            <h1><%= p.title %></h1>
                            <h2>จำนวน: <%= p.cartItem.quantity %></h2>
                            <h2>ราคา: <%= p.cartItem.quantity * p.price    %></h2>
                            <% total += p.cartItem.quantity * p.price    %>
                            <form action="/cart-delete-item" method="POST">
                                <input type="hidden" value="<%= p.id %>" name="productId">
                                <button class="btn danger" type="submit">ลบ</button>
                            </form>
                        </li>
                    <% }) %>
                   
                </ul>
                <br>
                <div class="centered">
                    <div style=" padding: 10px; background-color: white;">
                        <h3>ราคารวม <%= total %></h3>
                        <form action="/create-order" method="post">
                            <button type="submit" class="btn" >Order Now!</button>
                         </form>
                    </div>
                    
                </div>
                 
            <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>